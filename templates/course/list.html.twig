{% extends 'base.html.twig' %}

{% block title %}
	Couse List
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Course List</h1>
		<div>
			<ul style="display: flex; flex-direction: column; gap: 20px;">
				{% for course in courses %}
					<li>
						<a href="{{ path('app_course', { id: course.id }) }}">{{ course.title }}</a><br />
						<a href="{{ path('app_course_update', { id:course.id }) }}">Update</a>
						<a href="{{ path('app_course_delete', { id:course.id }) }}">Delete</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}
